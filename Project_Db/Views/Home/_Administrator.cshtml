                    <div class="row">
                        <h4>Add Employee</h4>
                        <div class="form-group row">
                            <label for="Name" class="col-md-2 col-form-label">Name</label>

                            <div class="col-md-4">
                                <input class="form-control" type="text" id="Name" placeholder="Name">
                            </div>

                            <label for="Surname" class="col-md-2 col-form-label">Surname</label>

                            <div class="col-md-4">
                                <input class="form-control" type="text" id="Surname" placeholder="Surname">
                            </div>



                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">

                            <label for="JobTitle" class="col-md-2 col-form-label">JobTitle</label>

                            <div class="col-md-4">
                                <input class="form-control" type="text" id="JobTitle" placeholder="JobTitle">
                            </div>

                            <label for="Department" class="col-md-2 col-form-label">Department</label>

                            <div class="col-md-4">
                                <input class="form-control" type="text" id="Department" placeholder="Department">
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group row">

                            <label for="Postcode" class="col-md-2 col-form-label">Postcode</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" id="Postcode" placeholder="Postcode">
                            </div>

                            <label for="Gender" class="col-md-2 col-form-label">Gender</label>
                            <div class="col-md-2">
                                <select class="form-control" id="Gender" placeholder="Gender">
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <button type="button" id="submitButton" class="btn btn-default btn-lg">Submit Changes</button>
                        </div>
                    </div>
                </div>

                <div id="separateSection">
                    <h4>Delete Employee</h4>
                    <div class="row">
                        <label for="SelectEmployee" class="col-md-3 col-form-label">Select Employee</label>
